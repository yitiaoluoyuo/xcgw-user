// 背景图片
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")

// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

items()
  display: flex
  flex-direction: column
  flex-wrap: wrap
  padding: 3px 10px
  background: $color-background-panel

item()
  display: flex
  flex-direction: row
  flex-wrap: wrap
  margin: 5px 0px
  width: 100%

list($direction)
  display: flex
  flex-direction: $direction
  flex-wrap: wrap
  box-sizing: border-box
  background: $color-background-panel

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px
